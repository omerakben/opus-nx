{
  "name": "@opus-nx/db",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\"",
    "test": "vitest run",
    "migrate": "tsx run-migrations.ts",
    "migrate:local": "SUPABASE_MIGRATION_MODE=local tsx run-migrations.ts",
    "migrate:linked": "SUPABASE_MIGRATION_MODE=linked tsx run-migrations.ts",
    "generate": "supabase gen types typescript --local > src/types.ts"
  },
  "dependencies": {
    "@opus-nx/shared": "workspace:*",
    "@supabase/supabase-js": "^2.95.3"
  },
  "devDependencies": {
    "supabase": "^2.76.8",
    "tsx": "4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
