{
  "name": "@opus-nx/db",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "echo 'Run: supabase db push' && exit 0",
    "generate": "supabase gen types typescript --local > src/types.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.47.0",
    "@opus-nx/shared": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "supabase": "^1.200.0"
  }
}
