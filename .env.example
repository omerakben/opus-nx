# ============================================================
# Opus Nx local BYO credentials
# Copy this file to .env and fill with your own values.
# ============================================================

# Anthropic API (Required for reasoning endpoints)
ANTHROPIC_API_KEY=sk-ant-...

# Access code + auth signing secret (Required)
AUTH_SECRET=change-me

# Supabase (Required for sessions and persistence)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=...
SUPABASE_ANON_KEY=...

# Voyage embeddings (Optional)
# VOYAGE_API_KEY=pa-...

# Tavily search (Optional; used by research workflows)
# TAVILY_API_KEY=tvly-...

# ============================================================
# Swarm integration
# ============================================================

# Python swarm backend URL (required for swarm features)
NEXT_PUBLIC_SWARM_URL=http://localhost:8000

# Neo4j Graph Database (Optional â€” swarm works without it)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_PASSWORD=...

# Neo4j User (default: neo4j)
# NEO4J_USER=neo4j

# Optional demo switch (default off)
DEMO_MODE=false
